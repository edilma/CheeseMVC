


<h1>My Cheese</h1>
<p>
    <a asp-controller="Cheese" asp-action="Add">Add Cheese </a><br />
    <a asp-controller="Cheese" asp-action="Remove">Remove Cheese Checkbox </a><br />
    <a asp-controller="Cheese" asp-action="Delete">Delete Cheese Select </a>
</p>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>
    @foreach (Cheese cheese in ViewBag.cheeses)
    {
    <tr>
        <td>@cheese.Name</td>
        <td>@cheese.Description</td>
    </tr>
                }
    </table>

        @if (ViewBag.cheeses.Count == 0)
        {
            <p>No cheeses yet!</p>
        }


        @if (ViewBag.error != null)
        {
            <p>@ViewBag.error</p>

        }







