
@model CheeseMVC.ViewModels.AddEditCheeseViewModel

<h1> Edit Cheese</h1>

    <form asp-controller="Cheese" asp-action="Edit" method="post">
    <!--<div asp-validation-summary="All">
    </div>-->
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />

        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Model.CheeseTypes"></select>

    </div>

    <input type="hidden" name="cheeseId" value="@Model.cheeseId" />
    <input type="submit" value="Edit Cheese" />
    </form>